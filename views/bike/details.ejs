    <script>
      axios
        .get(`/api/v1/bikes/${bikeId}`)
        .then(function(response) {
          let data = response.data;
          $("#bikeDetails").append(`<div class="col-lg-6">
							<div class="product_image_slider_container">
								<div id="slider" class="flexslider">
									<!--class="slides"style="-->
									<ul list-style: none;">
										<li>
											<img src="${data.image_url}"/>
										</li>
									</ul>
								</div>
							</div>
						</div>
						<!-- Product Info -->
						<div class="col-lg-6 product_col">
							<div class="product_info">
								<div class="product_name">${data.brand} ${data.name} ${data.engine}</div>
								<div class="product_category">Model year: <a href="category.html">${data.year}</a></div>
								<div class="product_price">Rs. ${data.price}<!--<span>.99</span>--></div>
								<div class="product_size">
									<div class="product_size_title">Details : </div>
								</div>	
								<div class="product_text">
									<p>${data.details}</p>
								</div>
								</div>
							</div>`);
        })
        .catch(function(error) {
          // handle error
          console.log(error, "a");
        });
